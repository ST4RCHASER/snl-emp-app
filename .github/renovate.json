{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base"],
	"lockFileMaintenance": {
		"enabled": true
	},
	"packageRules": [
		{
			"automerge": true,
			"packagePatterns": ["*"],
			"enabled": true
		}
	],
	"vulnerabilityAlerts": {
		"enabled": true
	},
	"baseBranches": ["dev"],
	"schedule": ["before 6pm every weekday", "after 9am every weekday"],
	"timezone": "Asia/Bangkok"
}
